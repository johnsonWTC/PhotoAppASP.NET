@model IEnumerable<PhotoApp.Models.Comment>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.commentContent)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.commentLikes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.commentViews)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.post)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.commentContent)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.commentLikes)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.commentViews)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.post.PostId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.commentID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.commentID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.commentID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
